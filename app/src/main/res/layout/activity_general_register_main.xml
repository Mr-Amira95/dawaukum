<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".General.RegisterMainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/user_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register As User"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pharmacy_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register As Pharmacy"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doctor_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register As Doctor"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_button"/>

</LinearLayout>