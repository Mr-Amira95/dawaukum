<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".General.RegisterUserActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="50dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:background="@drawable/background_edittext"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:background="@drawable/background_edittext"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthdate"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/background_edittext"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <RadioGroup
            android:id="@+id/commercial_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male_selection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/female_selection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identifier"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <Spinner
                android:id="@+id/identifier_type"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/identifier_number"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:hint="Number"
                android:textColorHint="@color/hint_color"
                android:paddingHorizontal="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@drawable/background_edittext"
                android:paddingVertical="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:background="@drawable/background_edittext"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:background="@drawable/background_edittext"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:background="@drawable/background_edittext"
            android:paddingVertical="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_button"/>

    </LinearLayout>

</ScrollView>